---
import { siteConfig } from "../config";

const hasProjects =
  siteConfig.projects && siteConfig.projects.length > 0;

const hasInternship =
  siteConfig.internship && siteConfig.internship.length > 0;

const hasCertifications =
  siteConfig.certifications && siteConfig.certifications.length > 0;

const hasEducation =
  siteConfig.education && siteConfig.education.length > 0;

const hasSoftSkills =
  siteConfig.softSkills && siteConfig.softSkills.length > 0;
---

<header
  id="header"
  class="fixed top-0 left-0 right-0 z-50 hidden md:block transition-all duration-300"
>
  <nav class="max-w-7xl mx-auto px-8 py-4">
    <ul class="flex items-center gap-8 justify-center">

      <!-- About -->
      <li>
        <a
          href="#about"
          class="text-gray-700 hover:text-black transition-colors font-medium"
        >
          About
        </a>
      </li>

      <!-- Education -->
      {hasEducation && (
        <li>
          <a
            href="#education"
            class="text-gray-700 hover:text-black transition-colors font-medium"
          >
            Education
          </a>
        </li>
      )}

      <!-- Projects -->
      {hasProjects && (
        <li>
          <a
            href="#projects"
            class="text-gray-700 hover:text-black transition-colors font-medium"
          >
            Projects
          </a>
        </li>
      )}

      <!-- Internship -->
      {hasInternship && (
        <li>
          <a
            href="#internship"
            class="text-gray-700 hover:text-black transition-colors font-medium"
          >
            Internship
          </a>
        </li>
      )}

      <!-- Certifications -->
      {hasCertifications && (
        <li>
          <a
            href="#certifications"
            class="text-gray-700 hover:text-black transition-colors font-medium"
          >
            Certifications
          </a>
        </li>
      )}

      <!-- Soft Skills -->
      {hasSoftSkills && (
        <li>
          <a
            href="#soft-skills"
            class="text-gray-700 hover:text-black transition-colors font-medium"
          >
            Soft Skills
          </a>
        </li>
      )}

    </ul>
  </nav>
</header>

<script>
  window.addEventListener("scroll", () => {
    const header = document.getElementById("header");
    if (window.scrollY > 100) {
      header?.classList.add("bg-white/80", "backdrop-blur-sm");
    } else {
      header?.classList.remove("bg-white/80", "backdrop-blur-sm");
    }
  });
</script>

<style>
  html {
    scroll-behavior: smooth;
  }
</style>