---
import { siteConfig } from "../config";
const hasSoftSkills = siteConfig.softSkills && siteConfig.softSkills.length > 0;
---

{hasSoftSkills && (
<section id="soft-skills" class="scroll-mt-28 pt-32 p-8 sm:p-12 md:p-16 lg:p-24 font-mono">
  <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16">
    <div class="lg:col-span-4">
      <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900 whitespace-nowrap -mt-4">
        Soft Skills
      </h2>
      <div class="w-[75px] h-[5px] mt-2 rounded-full" style={`background-color: ${siteConfig.accentColor}`} />
    </div>
    <div class="lg:col-span-8">
      <div class="flex flex-wrap gap-3">
        {siteConfig.softSkills.map((skill) => (
          <span class="px-4 py-2 bg-gray-100 border border-gray-200 rounded-full text-lg font-medium text-gray-800 hover:shadow-md transition">
            {skill}
          </span>
        ))}
      </div>
    </div>
  </div>
</section>
)}